    {{!-- favicon end --}}
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {}

        p {
            color: rgb(27, 141, 156);
            font-size: 1.7rem;
        }


        .container {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        h1 {
            color: blueviolet;
            font-size: 3.6rem;
        }

        h2 {
            color: rgb(228, 83, 83);
        }


        /* //Dark Mode  */

        .dark {
            position: absolute;
            right: 50px;
            top: 40px;
            transform: translateY(-50%);
            height: 40px;
            width: 130px;
            border-radius: 5px;
        }

        .Darkcenter {
            position: absolute;
            top: 8%;
            left: 76%;
            height: 24px;
            width: 50px;
            border-radius: 20px;
            transform: translate(-50%, -50%);
        }

        .Darkcenter #dark {
            position: relative;
            height: 100%;
            width: 100%;
            background: #e6e6e6;
            border-radius: 20px;
            outline: none;
            cursor: pointer;
            transition: .5s;
            -webkit-appearance: none;
            box-shadow: inset 0 0 5px rgba(0, 0, 0, .2);
        }

        #dark:before {
            position: absolute;
            content: '';
            top: 0;
            left: 0;
            height: 24px;
            width: 24px;
            border-radius: 20px;
            background: linear-gradient(#fff, #f2f2f2, #e6e6e6, #d9d9d9);

        }

        #dark:checked {
            background: #000;
        }

        #dark:checked:before {
            left: 24px;
        }

        .Active {
            background: #1a1a1a;
            color: white;
        }

        input[type=submit] {
            padding: 10px 12px;
            border-radius: 13%;
            outline: none;
            color: wheat;
            background: #3a1486;
            font-size: 1.2rem;
            font-weight: 600;
            margin: 10px;
            margin-left: 695px;
            border: none;
            cursor: pointer;
        }

        @media screen and (max-width: 800px) and (min-width: 400px) {
            .container {
                height: 78vh;
                display: flex;
                justify-content: center;
                align-items: center;
                flex-direction: column;
            }

            h2 {
                color: rgb(228, 83, 83);
                font-size: 1.8rem;
            }

            h1 {
                color: blueviolet;
                font-size: 2.1rem;
                font-family: monospace;
                margin-top: 17px;
            }

            input[type=submit] {
                padding: 10px 12px;
                border-radius: 13%;
                outline: none;
                color: wheat;
                background: #3a1486;
                font-size: 1.2rem;
                font-weight: 600;
                margin: 10px;
            }

            .Darkcenter {
                position: absolute;
                top: 33%;
            }

            p {
                font-size: 1.1rem;
                text-align: center;
                background: burlywood;
                color: saddlebrown;
                height: 6.2vh;
                display: flex;
                justify-content: center;
                align-items: center;
                position: absolute;
                bottom: 0px;
                width: 100%;
            }

            footer {
                background: rgb(221, 217, 217);
                bottom: -24px;
                position: absolute;
                width: 100%;
            }
        }
    </style>

</head>

<body>

    {{!-- For dark mode --}}
    <nav>
        <div class="dark">
            <div class="Darkcenter">
                <input id="dark" type="checkbox">
            </div>
        </div>
    </nav>
    {{!-- dark mode end --}}

    {{!-- logout --}}
    <form action="/logout" method="POST">
        <input type="submit" value="Log Out">
    </form>
    {{!-- logout end --}}


    <script>
        alert("You have successfully login to your account.");
    </script>
    <div class="container">
        <h2 id="time" />
        <h1>Welcome to Dashboard Page</h1>
    </div>

    {{!-- footer starts --}}
    <footer style="w-100 bg-light text-center ">
        <p style="height:'10vh',display:'flex',justifyContent:'center',alignItems:'center'">&copy; 2021 SaranshRock. All
            Rights Reserved | Terms and Conditions</p>
    </footer>
    {{!-- footer ends --}}

    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    {{!-- Dark mode --}}
    <script>
        $(document).ready(function () {
            $('#dark').click(function () {
                $('body').toggleClass('Active');
                $('.dark').toggleClass('check');
            });
        });
    </script>
    {{!-- dark mode ends --}}


    {{!-- digital clock --}}
    <script>
        const dt = () => {
            ddtt = new Date().toLocaleTimeString();
            document.getElementById('time').innerHTML = ddtt;
        }
        setInterval(dt, 1000);
    </script>
</body>

</html>